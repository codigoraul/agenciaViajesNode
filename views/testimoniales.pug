extends ./layout/index

block contenido
    main.container.mt-5
        h1.text-center.mt-5 #{pagina}
        include ./layout/bloque_testimoniales
                            
        .row

            .col-md-12 
                h2.d-block.w-100.text-center Agregar un Testimonial

                if(errores)
                    each error in errores
                        .alert.col.alert-danger.text-center= error.mensaje

            .row.justify-concent-center.col 
                .col-md-8 

                    form(action="/testimoniales" method="POST")

                        .form-group 
                            label(for="nombre") Nombre
                            input#nombre(type="text", value= nombre placeholder="Tu nombre", name="nombre", class="form-control")
                        .form-group 
                            label(for="correo") Correo electr√≥nico
                            input#nombre(type="text", value= correo placeholder="Tu correo", name="correo", class="form-control")
                        .form-group 
                            label(for="mensaje") Mensaje
                            textarea#mensaje( placeholder="Tu mensaje", name="mensaje", class="form-control", )= mensaje
                        input.btn.btn-success.btn-block(type="submit")        